<h2>Word: <%= @definition.word.name %></h2>
<h3>Definition: <%= @definition.name %></h3>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="definition_name">New definition</label>
  <input id="definition_name_two" name="definition_name" type="text">

  <button type="submit" class="danger">Update definition</button>
</form>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="danger">Delete definition</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.name %></a>
