<div class="new_object_page">
  <h2>Update <%= @word.name() %></h2>
  <h3><%= @word.pronunciation %></h3>

  <form action="/words/<%= @word.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Rename word</label>
    <input id="name" name="name" type="text">
    <label for="pronunciation">Redefine pronunciation</label>
    <input id="pronunciation" name="pronunciation" type="text">
    <button type="submit"class="danger">Update</button>
  </form>

  <p><a href="/words">Return to word list</a></p>

  <form action="/words/<%= @word.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <button type="submit"class="danger">Delete word</button>
  </form>
</div>
